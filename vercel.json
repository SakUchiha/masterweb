{
  "version": 2,
  "buildCommand": "cd code-understanding-app && npm install && npm run vercel-build",
  "outputDirectory": "code-understanding-app/dist",
  "functions": {
    "api/*.js": {
      "runtime": "node@18",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/groq/health",
      "dest": "/api/groq.js"
    },
    {
      "src": "/api/groq",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/groq.js"
    },
    {
      "src": "/((?!api).*)",
      "dest": "/code-understanding-app/dist/$1",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true"
  }
}
