{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "vibing/code-understanding-app/frontend",
  "public": true,
  "rewrites": [
    {
      "source": "/api/lessons/:id",
      "destination": "/api/lessons?id=:id"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/vibing/code-understanding-app/frontend/$1"
    }
  ],
  "builds": [
    {
      "src": "api/**",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"],
        "regions": ["all"],
        "maxDuration": 10
      }
    },
    {
      "src": "vibing/code-understanding-app/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,DELETE,PATCH,POST,PUT,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ]
}
