{
  "version": 2,
  "buildCommand": "cd vibing/code-understanding-app && npm install && npm run build:frontend",
  "outputDirectory": "vibing/code-understanding-app/dist",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/groq",
      "destination": "/api/groq.js"
    },
    {
      "source": "/api/groq/health",
      "destination": "/api/groq.js?health=true"
    },
    {
      "source": "/api/lessons",
      "destination": "/api/lessons.js"
    },
    {
      "source": "/api/lessons/:id",
      "destination": "/api/lessons.js?id=:id"
    },
    {
      "source": "/css/:file*",
      "destination": "/vibing/code-understanding-app/dist/css/:file*"
    },
    {
      "source": "/js/:file*",
      "destination": "/vibing/code-understanding-app/dist/js/:file*"
    },
    {
      "source": "/data/:file*",
      "destination": "/vibing/code-understanding-app/dist/data/:file*"
    },
    {
      "source": "/:file*\\.(ico|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|eot|json)",
      "destination": "/vibing/code-understanding-app/dist/:file*.$1"
    },
    {
      "source": "/:file*\\.html",
      "destination": "/vibing/code-understanding-app/dist/:file*.html"
    },
    {
      "source": "/",
      "destination": "/vibing/code-understanding-app/dist/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/vibing/code-understanding-app/dist/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,DELETE,PATCH,POST,PUT,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ]
}
