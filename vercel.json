{
  "version": 2,
  "buildCommand": "cd vibing && npm install",
  "outputDirectory": "vibing/code-understanding-app/dist",
  "builds": [
    {
      "src": "api/**",
      "use": "@vercel/node"
    },
    {
      "src": "vibing/code-understanding-app/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/lessons/:id",
      "destination": "/api/lessons?id=:id"
    },
    {
      "source": "/api/groq",
      "destination": "/api/groq"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/vibing/code-understanding-app/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,DELETE,PATCH,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ]
}
