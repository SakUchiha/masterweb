{
  "version": 2,
  "buildCommand": "cd vibing/code-understanding-app && npm install && npm run build:frontend",
  "outputDirectory": "vibing/code-understanding-app/dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/groq",
      "destination": "/api/groq.js"
    },
    {
      "source": "/api/groq/health",
      "destination": "/api/groq.js?health=true"
    },
    {
      "source": "/api/lessons",
      "destination": "/api/lessons.js"
    },
    {
      "source": "/api/lessons/:id",
      "destination": "/api/lessons.js?id=:id"
    },
    {
      "source": "/api/progress",
      "destination": "/api/progress.js"
    },
    {
      "source": "/api/progress/:userId",
      "destination": "/api/progress.js?userId=:userId"
    },
    {
      "source": "/api/achievements",
      "destination": "/api/achievements.js"
    },
    {
      "source": "/api/achievements/:userId",
      "destination": "/api/achievements.js?userId=:userId"
    },
    {
      "source": "/api/sessions/start",
      "destination": "/api/sessions.js"
    },
    {
      "source": "/api/sessions/:sessionId/end",
      "destination": "/api/sessions.js?sessionId=:sessionId"
    },
    {
      "source": "/api/analytics/lessons",
      "destination": "/api/analytics.js"
    },
    {
      "source": "/api/analytics/users/:userId",
      "destination": "/api/analytics.js?userId=:userId"
    },
    {
      "source": "/api/cache/stats",
      "destination": "/api/cache.js"
    },
    {
      "source": "/api/cache/clear",
      "destination": "/api/cache.js"
    },
    {
      "source": "/css/:file*",
      "destination": "/vibing/code-understanding-app/dist/css/:file*"
    },
    {
      "source": "/js/:file*",
      "destination": "/vibing/code-understanding-app/dist/js/:file*"
    },
    {
      "source": "/data/:file*",
      "destination": "/vibing/code-understanding-app/dist/data/:file*"
    },
    {
      "source": "/:file*\\.(ico|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|eot|json)",
      "destination": "/vibing/code-understanding-app/dist/:file*.$1"
    },
    {
      "source": "/:file*\\.html",
      "destination": "/vibing/code-understanding-app/dist/:file*.html"
    },
    {
      "source": "/",
      "destination": "/vibing/code-understanding-app/dist/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/vibing/code-understanding-app/dist/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ]
}
