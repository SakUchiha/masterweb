{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/ai",
      "destination": "/ai.html"
    },
    {
      "source": "/ask-ai",
      "destination": "/ask-ai.html"
    },
    {
      "source": "/code-explainer",
      "destination": "/code-explainer.html"
    },
    {
      "source": "/editor",
      "destination": "/editor.html"
    },
    {
      "source": "/lessons",
      "destination": "/lessons.html"
    },
    {
      "source": "/lesson-viewer",
      "destination": "/lesson-viewer.html"
    },
    {
      "source": "/study-guide",
      "destination": "/study-guide.html"
    },
    {
      "source": "/contact",
      "destination": "/contact.html"
    },
    {
      "source": "/cache-clear",
      "destination": "/cache-clear.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
