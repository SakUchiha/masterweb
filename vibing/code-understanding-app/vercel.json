{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/favicon.ico",
      "destination": "/frontend/favicon.ico"
    },
    {
      "source": "/manifest.json",
      "destination": "/frontend/manifest.json"
    },
    {
      "source": "/sw.js",
      "destination": "/frontend/sw.js"
    },
    {
      "source": "/css/(.*)",
      "destination": "/frontend/css/$1"
    },
    {
      "source": "/js/(.*)",
      "destination": "/frontend/js/$1"
    },
    {
      "source": "/data/(.*)",
      "destination": "/frontend/data/$1"
    },
    {
      "source": "/",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/lessons",
      "destination": "/frontend/lessons.html"
    },
    {
      "source": "/editor",
      "destination": "/frontend/editor.html"
    },
    {
      "source": "/ai",
      "destination": "/frontend/ai.html"
    },
    {
      "source": "/study-guide",
      "destination": "/frontend/study-guide.html"
    },
    {
      "source": "/lesson-viewer",
      "destination": "/frontend/lesson-viewer.html"
    },
    {
      "source": "/code-explainer",
      "destination": "/frontend/code-explainer.html"
    },
    {
      "source": "/contact",
      "destination": "/frontend/contact.html"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/frontend/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
